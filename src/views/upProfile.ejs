    <section class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5">
            <h2 class="mb-4">Dados pessoais</h2>
            <form action="/recUpProfile" method="POST" class="p-4 border rounded" style="width: 1100px;">
              <div class="row form-group">
                <div class="col-md-6 mb-3 mb-md-0">
                  <input type="hidden" name="id" value="<%= cliente.id %>">
                  <label class="text-black" for="fname">Nome Completo</label>
                  <input type="text" id="fname" class="form-control" placeholder="" name="nome" value="<%= cliente.nome %>">
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                  <label class="text-black" for="fmail">E-Mail</label>
                  <input type="email" id="fmail" class="form-control" placeholder="" name="email" value="<%= cliente.email %>">
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                  <label class="text-black">Sexo</label>
                  <select class="form-control" data-style="btn-white btn-lg" data-width="100%" data-live-search="true" title="Sexo" name="sexo" value="<%= cliente.sexo %>">
                    <option>Masculino</option>
                    <option>Feminino</option>
                  </select>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-3 mb-3 mb-md-0">
                  <label class="text-black" for="fnasc">Nascimento</label>
                  <input type="date" id="fnasc" class="form-control" name="datan" value="<%= cliente.nascimento %>">
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                  <label class="text-black" for="fcpf">CPF</label>
                  <input type="text" id="fcpf" class="form-control cpf" placeholder="" name="cpf" value="<%= cliente.cpf %>">
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                  <label class="text-black">Objetivo</label>
                  <select class="form-control" data-style="btn-white btn-lg" data-width="100%" data-live-search="true" title="Sexo" name="obj" value="<%= cliente.objetivo %>">
                    <option>Hipertofia</option>
                    <option>Condicionamento Físico</option>
                    <option>Perda de peso</option>
                    <option>Bem estar</option>
                  </select>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                  <label class="text-black" for="fpass">Senha</label>
                  <input type="text" id="fpass" class="form-control" placeholder="" name="senha" value="<%= cliente.senha %>">
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                  <label class="text-black" for="fobs">Observação</label>
                  <input type="text" id="fobs" class="form-control" placeholder="" name="obs" value="<%= cliente.observacao %>">
                </div>
              </div>
                <div class="row form-group">
                  <div class="col-md-3">
                    <input type="submit" value="Salvar alterações" class="btn px-4 btn-primary text-white">
                  </div>
                </div>          
            </form>
          </div>
        </div>
      </div>
    </section>
